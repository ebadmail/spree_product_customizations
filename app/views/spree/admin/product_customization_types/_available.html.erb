<h4><%= t("add_product_customization_types") %></h4>
<table class="table">
  <thead>
    <tr>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:presentation) %></th>
      <th><%= Spree.t(:description) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @available_product_customization_types.each do |ct| %>
      <tr>
        <td><%=ct.name %></td>
        <td><%=ct.presentation %></td>
        <td><%=ct.description %></td>
        <td class="actions">
          <%= link_to_with_icon 'plus', Spree.t(:select),
            url_for(controller: "admin/product_customization_types",
                    id: ct,
                    product_id: @product.friendly_id,
                    action: "select",
                    product_customization_type_id: ct),
              class: "btn btn-success btn-sm",
              remote: true, no_text: true
            %>
        </td>
      </tr>
    <% end %>
    <% if @available_product_customization_types.empty? %>
      <tr>
        <td colspan="3"><%= t('none_available') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
